<div class="main user-show">
  <div class="container">
    <div class="user">
      <h3> 
        <div class= "img_icon"><img src= "<%= "/user_image/#{@user.image_name}" %>"></div>
        <%= @user.name %>
      </h3>
      <h4><%= @user.profile %></h4>
          <ul>
            <li><%= link_to("favorite","/#{@user.id}/favorite")%></li>
            <li><%= link_to("profile_edit","/#{@user.id}/edit")%></li>
            <li><%= link_to("post","/#{@user.id}/post_form")%></li>
          </ul>
    </div>
    <!--ユーザーに紐づく画像一覧を表示させる-->
    <% @photos.each do |photo| %>
      <div class = "photo_box">
        <img src= "<%= "/photo_image/#{photo.image_name}" %>">
      </div>
      <div class="comment_box">
        <p><%= photo.comment %></p>
        <p>stars:<%= photo.stars %></p>
        <!--削除機能を実装予定-->
      </div>
    <% end %>
  </div>
</div>
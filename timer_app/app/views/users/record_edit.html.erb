<div class="main users-edit">
  <div class="container">
    <div class="form-heading">学習の記録</div>
    <div class="form users-form">
      <div class="form-body">
        <!--エラーメッセージの表示-->
        <% @logs.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>

        <%= form_tag("/users/#{@logs.id}/record_update",{multipart: true}) do %>
          <p>開始日時</p>
          <input name="start_time" value="<%= @logs.start_time %>" readonly>
          <p>終了日時</p>
          <input name="end_time" value="<%= @logs.end_time %>">
          <p>学習内容</p>
          <textarea name="menu"><%= @logs.menu %></textarea>
          <input type="submit" value="更新">
        <% end %>
      </div>
    </div>
  </div>
</div>
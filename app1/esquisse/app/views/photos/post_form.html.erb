<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">Photo</h1>
      <div class="form">
        <div class="form-body">
          <% @photo.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
          <%= form_tag("/create",{multipart: true}) do %>
            <p>Photo</p>
            <input type="file" name = "image_name">
            <p>Content</p>
            <textarea name="content"><%=@photo.content %></textarea>
            <input type="submit" value="Post">
          <% end %>
          <%= button_to "Back", {controller: 'photos', action: 'index'}, {method: :get} %>
        </div>
      </div>
  </div>
</div>
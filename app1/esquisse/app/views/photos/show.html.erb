<h1>投稿詳細ページ</h1>
<h3><%= @photo.user.email %></h3>
<h3><%= @photo.content %></h3>
<h3>いいね件数: <%= @photo.favorites.count %></h3>
<% if current_user.already_fav?(@photo) %>
  <%= button_to 'いいねを取り消す', photo_favorite_path(@photo), method: :delete %>
<% else %>
  <%= button_to 'いいね', photo_favorites_path(@photo) %>
<% end %>
<h2>いいねしたユーザー</h2>
<% @photo.favorite_user.each do |user| %>
  <li><%= user.email %></li>
<% end %>
<%= link_to "ホームへ戻る", photos_path %>